from bs4 import BeautifulSoup
import requests


class vtt:

    def __init__(self, modele, url):
        self.modele = modele
        self.url = url

# Canyon Spectral AL 6
spectral_AL_06 = vtt('Spectral AL 06, 2020', 'https://www.canyon.com/en-fr/mountain-bikes/trail-bikes/spectral/spectral-al-6.0/2230.html?dwvar_2230_pv_rahmengroesse=XL&dwvar_2230_pv_rahmenfarbe=RD' )

#print(spectral_AL_06.modele)
velos = [spectral_AL_06]

for velo in velos:
    page = requests.get(velo.url)
    soup = BeautifulSoup(page.content, 'html.parser')
    data = soup.find(class_="productDescription__addToCartPrice xlt-pdpPrice").get_text()

print(data)
